<% @challenges.tags.build %>
 <%= form_for(@challenges) do |challenge_form| %>
   <% if @challenges.errors.any? %> 
   <div id="errorExplanation">
    <h2><%= pluralize(@challenges.errors.count, "error") %> prohibited this challenge from being saved:</h2>
    <ul>
    <% @challenges.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %> 
 
 
  <h2>Tags</h2>
  <%= render :partial => 'tags/form',
             :locals => {:form => challenge_form} %>
  <div class="actions">
    <%= challenge_form.submit %>
  </div>
<% end %> 


 <%= form.fields_for :tags do |tag_form| %>
  <div class="field">
    <%= tag_form.label :name, 'Tag:' %>
    <%= tag_form.text_field :name %>
  </div>
  <% unless tag_form.object.nil? || tag_form.object.new_record? %>
    <div class="field">
      <%= tag_form.label :_destroy, 'Remove:' %>
      <%= tag_form.check_box :_destroy %>
    </div>
  <% end %>
<% end %> 
