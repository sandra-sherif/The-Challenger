<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <!-- This file was auto generated with devise; however it was customized to add the first name, last name, the age and the profile picture fields. The email, the password and the confirmation were auto generated by devise to create the account -->

  <div class="first_name">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <p></p>
  <div class="last_name">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <p></p>
  <div class="age">
    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true %>
  </div>
   <div class="form-group">
        <%= f.label :avatar, "Profile Picture", class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar %>
        </div>
    </div>
<br/>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <p></p>
  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>

    <% end %><br />

    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <p></p>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  <p></p>
  <div class="actions">
    <%= f.submit "Sign up"%>
  </div>

<% end %>

<style>
  .form-group {
        position:fixed; 
		    left:250pt; 
		    top: 197pt;
  }
</style>





