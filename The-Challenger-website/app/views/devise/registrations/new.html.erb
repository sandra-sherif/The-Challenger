<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <!-- This file was auto generated with devise; however it was customized to add the first name, last name, the age and the profile picture fields. The email, the password and the confirmation were auto generated by devise to create the account -->

  <div class="first_name">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <p></p>
  <div class="last_name">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <p></p>
  <div class="age">
    <%= f.label :age %><br />
    <%= f.text_field :age, autofocus: true %>
  </div>
   <div class="form-group">
        <%= f.label :avatar, "Profile Picture", class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar %>
        </div>
    </div>
<br/>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <p></p>
  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>

    <% end %><br />

    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <p></p>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>

  </div> 
  
  <p>By clicking Sign Up, you agree to our Terms and that you have read our <a href="//www.iubenda.com/privacy-policy/980731" class="iubenda-white iubenda-embed" title="Privacy Policy">Privacy Policy</a> </p>
  <script type="text/javascript">(function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0];
  s.src = "//cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);};
  if(w.addEventListener){w.addEventListener("load", loader, false);}
  else if(w.attachEvent){w.attachEvent("onload", loader);}
  else{w.onload = loader;}})(window, document);</script>

  <div class="actions">
    <%= f.submit "Sign up"%>
  </div>

<% end %>

<style>
  .form-group {
        position:fixed; 
		    left:250pt; 
		    top: 197pt;
  }
</style>





