<%= div_for comment do %>
        <% @user =  User.find(comment.user_id) %>
        <p>
                <strong>
                		
                        Posted <%= time_ago_in_words(comment.created_at) %> ago by 
                        <%= @user.full_name %>
                </strong>
                <br/>
                <%= comment.text %>
        </p>
        <p>
        
        <% if comment.user_id == current_user.id or current_user.try(:admin?)%>
 		
        <%= link_to 'Delete Comment', [comment.challenge, comment],
               method: :delete,
        
               data: { confirm: 'Are you sure?' }, class:"btn btn-warning" %>
       
       <% end %>
</p>

<% end %>